{
  "name": "SubSync Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-azuretools.vscode-docker"]
    },
    "settings": {
      "terminal.integrated.defaultProfile.linux": "zsh"
    }
  },
  "postCreateCommand": "pip install -r /subsync/requirements.txt || true"
}
